
nikita = require '../../src'
test = require '../test'
they = require 'ssh2-they'

describe 'file.types.ssh_authorized_keys', ->

  scratch = test.scratch @

  they 'overwrite file', (ssh) ->
    nikita
      ssh: ssh
    .file
      target: "#{scratch}/authorized_keys"
      content: "# Some Comment"
    .file.types.ssh_authorized_keys
      target: "#{scratch}/authorized_keys"
      keys: [
        'ssh-rsa  Some Description'
      ]
    , (err, {status}) ->
      status.should.be.true() unless err
    .file.assert
      target: "#{scratch}/authorized_keys"
      content: "ssh-rsa  Some Description\n"
    .promise()

  they 'merge file', (ssh) ->
    nikita
      ssh: ssh
    .file
      target: "#{scratch}/authorized_keys"
      content: "# Some Comment"
    .file.types.ssh_authorized_keys
      target: "#{scratch}/authorized_keys"
      keys: [
        'ssh-rsa  Some Description'
      ]
      merge: true
    , (err, {status}) ->
      status.should.be.true() unless err
    .file.assert
      target: "#{scratch}/authorized_keys"
      content: """
      # Some Comment
      ssh-rsa  Some Description\n
      """
    .promise()
